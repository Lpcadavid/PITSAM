<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_onErrorContainer"
    android:orientation="vertical"
    tools:context=".CrearClientesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Crear Nuevo Cliente"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Nombre Cliente"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Edad"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Ciudad"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />



        <Button
            android:id="@+id/btnIngresarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear CLiente"
            android:backgroundTint="@color/md_theme_onError"
            android:textColor="@color/md_theme_onErrorContainer"/>

        <Button
            android:id="@+id/btnActualizarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizar CLiente"
            android:backgroundTint="@color/md_theme_onError"
            android:textColor="@color/md_theme_onErrorContainer"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>